@model CustomerServiceControl.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Confirmar exclusão";
}

<h3>Você tem certeza que quer excluir este cliente?</h3>
<hr />

<div>
    <dl class="dl-horizontal">

        <dt>@Html.DisplayNameFor(model => model.Customer.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Customer.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Customer.CompanyName)</dt>
        <dd>@Html.DisplayFor(model => model.Customer.CompanyName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Customer.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Customer.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.Customer.Phone)</dt>
        <dd>@Html.DisplayFor(model => model.Customer.Phone)</dd>

        <dt>@Html.DisplayNameFor(model => model.Customer.DateTimeFirstAttendance)</dt>
        <dd>@Html.DisplayFor(model => model.Customer.DateTimeFirstAttendance)</dd>

        <dt>@Html.DisplayNameFor(model => model.Customer.DateTimeLastAttendance)</dt>
        <dd>@Html.DisplayFor(model => model.Customer.DateTimeLastAttendance)</dd>

        <dt>@Html.DisplayNameFor(model => model.Customer.ProductsAndServices)</dt>
        <dd>@String.Join(", ", Model.Customer.ProductsAndServices.Select(p => p.Description).ToArray())</dd>

    </dl>

    @using (Html.BeginForm("Delete", "Customer"))
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <input type="submit" value="Excluir" class="btn btn-default" />
            @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

